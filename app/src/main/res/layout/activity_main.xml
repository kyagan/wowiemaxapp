<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">




    <ImageView
        android:id="@+id/iwBannerVideo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@color/black"
        />

    <ImageView
        android:id="@+id/iwLogo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iwBannerVideo"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/iwLogo"
        app:layout_constraintBottom_toBottomOf="@id/iwLogo"
        android:src="@drawable/baseline_dehaze_24"

        />


    <ImageView
        android:id="@+id/iwMenu"
        android:layout_width="30dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/iwLogo"
        app:layout_constraintBottom_toBottomOf="@id/iwLogo"
        android:src="@drawable/baseline_dehaze_24"

        />

    <ImageView
        android:id="@+id/iwSearch"
        android:layout_width="30dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/iwLogo"
        app:layout_constraintBottom_toBottomOf="@id/iwLogo"
        android:src="@drawable/baseline_search_24"
        android:orientation="vertical"/>


    <TextView
        android:id="@+id/twMovieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/twSeasonEpisode"
        app:layout_constraintLeft_toLeftOf="@id/iwMenu"
        android:text="Movie Name"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/twSeasonEpisode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/season_Episode"
        app:layout_constraintBottom_toBottomOf="@id/iwBannerVideo"
        app:layout_constraintLeft_toLeftOf="@id/iwMenu"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/iwAdd"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="@id/iwSearch"
        app:layout_constraintTop_toTopOf="@id/twMovieName"
        android:src="@drawable/baseline_add_24"/>

    <ImageView
        android:id="@+id/iwPlay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintRight_toLeftOf="@id/iwSearch"
        app:layout_constraintTop_toTopOf="@id/iwAdd"
        app:layout_constraintBottom_toBottomOf="@id/iwAdd"
        android:src="@drawable/baseline_play_circle_24"
        />
    <LinearLayout
        android:id="@+id/linearLayoutMenu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="@id/iwMenu"
        app:layout_constraintRight_toRightOf="@id/iwSearch"
        app:layout_constraintTop_toBottomOf="@id/iwMenu"
        app:layout_constraintBottom_toTopOf="@id/twMovieName"
        android:background="@color/black"

        android:orientation="vertical"
        android:visibility="invisible"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menuMovies"
            android:textSize="15dp"
            android:textColor="@color/logotheme"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menuTvShows"
            android:textSize="15dp"
            android:textColor="@color/logotheme"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menuMostWatchedMovies"
            android:textSize="15dp"
            android:textColor="@color/logotheme"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menuLastWatched"
            android:textSize="15dp"
            android:textColor="@color/logotheme"
            />


        <TextView
            android:id="@+id/tvExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menuExit"
            android:textSize="15dp"
            android:textColor="@color/logotheme"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iwBannerVideo"
        android:src="@color/mainPageBackground"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iwBannerVideo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/twMostLiked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/horrorMovies"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rwMovieCategory"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    tools:listitem="@layout/movie_list_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    />
                <ProgressBar
                    android:id="@+id/categoryProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminateTint="@color/logotheme"
                    android:background="@color/mainPageBackground"/>
                <TextView
                    android:id="@+id/twEmptyCategoryMovies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:visibility="invisible"
                    android:textSize="30dp"
                    android:textColor="@color/logotheme"
                    android:text="Empty List"
                    android:drawableLeft="@drawable/baseline_list_24"/>
            </FrameLayout>


            <TextView
                android:id="@+id/twMoviePopularity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popularMovies"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rwMoviePopularity"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    tools:listitem="@layout/movie_list_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    />
                <ProgressBar
                    android:id="@+id/popularityProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminateTint="@color/logotheme"
                    android:background="@color/mainPageBackground"/>
                <TextView
                    android:id="@+id/twEmptyPopularMovies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:visibility="invisible"
                    android:textSize="30dp"
                    android:textColor="@color/logotheme"
                    android:text="Empty List"
                    android:drawableLeft="@drawable/baseline_list_24"/>
            </FrameLayout>

            <TextView
                android:id="@+id/twStreamer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movieprojectProducer"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpMovieStreamer"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="350dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/indicator"/>

                <me.relex.circleindicator.CircleIndicator3
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#191919"
                    app:ci_drawable="@drawable/circle_indicator_color"
                    app:layout_constraintTop_toBottomOf="@+id/vpMovieStreamer"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <ProgressBar
                    android:id="@+id/producerProgressBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/mainPageBackground"
                    android:indeterminateTint="@color/logotheme"
                    app:layout_constraintBottom_toTopOf="@+id/vpMovieStreamer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/twEmptyProducerMovies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:visibility="invisible"
                    android:textSize="30dp"
                    android:textColor="@color/logotheme"
                    android:text="Empty List"
                    android:drawableLeft="@drawable/baseline_list_24"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>