<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:animateLayoutChanges="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <RelativeLayout
        android:id="@+id/flHeader"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vpHeaderSlide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/clHeader"/>
        <LinearLayout
            android:id="@+id/linearLayoutMenu"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/black"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:paddingLeft="20dp"
            android:visibility="invisible"
            >

            <TextView
                android:id="@+id/tvMenuItem1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menuMovies"
                android:textSize="17sp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/logotheme"
                />

            <TextView
                android:id="@+id/tvMenuItem2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menuTvShows"
                android:textSize="17sp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/logotheme"
                />

            <TextView
                android:id="@+id/tvMenuItem3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menuMostWatchedMovies"
                android:textSize="17sp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/logotheme"
                />
            <TextView
                android:id="@+id/tvMenuItem4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menuLastWatched"
                android:textSize="17sp"
                android:layout_marginBottom="15dp"
                android:textColor="@color/logotheme"
                />
            <TextView
                android:id="@+id/tvExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menuExit"
                android:textSize="17sp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/logotheme"
                />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clHeader"
            android:background="@drawable/gradient_top_to_bottom_bg"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:layout_constraintTop_toTopOf="parent">
            <ProgressBar
                android:id="@+id/headerSlideProgressBar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:visibility="invisible"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:indeterminateTint="@color/logotheme"
                android:background="@color/mainPageBackground"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clHeaderTop"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/iwLogo"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/clHeaderTop"/>

                <ImageView
                    android:id="@+id/iwMenu"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="@id/iwLogo"
                    app:layout_constraintBottom_toBottomOf="@id/iwLogo"
                    android:src="@drawable/ic_menu" />

                <ImageView
                    android:id="@+id/iwSearch"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    app:layout_constraintTop_toTopOf="@id/iwLogo"
                    app:layout_constraintBottom_toBottomOf="@id/iwLogo"
                    android:src="@drawable/ic_search"
                    android:orientation="vertical"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/flHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/twMostLiked"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/horrorMovies"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tvShowAll3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Show All"
                    android:textSize="14sp"
                    android:gravity="center|right"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rwMovieCategory"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    tools:listitem="@layout/movie_list_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    />
                <ProgressBar
                    android:id="@+id/categoryProgressBar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/logotheme"
                    android:background="@color/mainPageBackground"/>
                <TextView
                    android:id="@+id/twEmptyCategoryMovies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:visibility="invisible"
                    android:textSize="30dp"
                    android:textColor="@color/logotheme"
                    android:text="@string/empty_list"
                    android:drawableLeft="@drawable/ic_list"/>
            </FrameLayout>

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/categories"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/rwMovieCategory"
                tools:listitem="@layout/category_list_item"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/twMoviePopularity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/popularMovies"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tvShowAll2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Show All"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:gravity="center|right"
                android:textColor="@color/white"/>
        </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rwMoviePopularity"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp"
                    tools:listitem="@layout/movie_list_item"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    />
                <ProgressBar
                    android:id="@+id/popularityProgressBar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="@color/logotheme"
                    android:background="@color/mainPageBackground"/>
                <TextView
                    android:id="@+id/twEmptyPopularMovies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:visibility="invisible"
                    android:textSize="30dp"
                    android:textColor="@color/logotheme"
                    android:text="Empty List"
                    android:drawableLeft="@drawable/ic_list"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/twStreamer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/movieprojectProducer"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tvShowAll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Show All"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
                android:gravity="center|right"
                android:textColor="@color/white"/>
        </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clSlideMovieMain"
                android:layout_width="match_parent"
                android:layout_height="350dp">

                <ProgressBar
                    android:id="@+id/producerProgressBar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@color/mainPageBackground"
                    android:indeterminateTint="@color/logotheme"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpSlide"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


                <TextView
                    android:id="@+id/twEmptyProducerMovies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:visibility="invisible"
                    android:textSize="30dp"
                    android:textColor="@color/logotheme"
                    android:text="Empty List"
                    android:drawableLeft="@drawable/ic_list"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/indicator"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#191919"
                app:ci_drawable="@drawable/indicator_circle_color"
                app:layout_constraintTop_toBottomOf="@+id/vpSlide"/>

            <TextView
                android:id="@+id/tvForYou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/for_you"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clRandom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/gradient_random_background"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:id="@+id/ivRandom"
                    android:src="@drawable/ic_random_white"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:id="@+id/tvRandomTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/random_title"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:fontFamily="@font/ubuntu_bold"
                    android:textSize="26sp"
                    android:paddingRight="25dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="25dp"
                    app:layout_constraintTop_toBottomOf="@id/ivRandom"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnRandom"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/play_something"
                    app:layout_constraintTop_toBottomOf="@id/tvRandomTitle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:fontFamily="@font/ubuntu_bold"
                    android:drawablePadding="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:drawableStart="@drawable/ic_random_black"
                    android:background="@drawable/btn_random_background"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>